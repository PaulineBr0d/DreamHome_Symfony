{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div 
            x-data="{ show: true }"
            x-show="show"
            x-init="setTimeout(() => show = false, 4000)"
            class="mb-2 px-4 py-2 rounded text-sm font-medium w-fit
                {{ label == 'success' ? 'bg-green-100 text-green-800' : '' }}
                {{ label == 'danger' or label == 'error' ? 'bg-red-100 text-red-800' : '' }}
                {{ label == 'warning' ? 'bg-yellow-100 text-yellow-800' : '' }}
                {{ label == 'info' ? 'bg-blue-100 text-blue-800' : '' }}"
        >
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}